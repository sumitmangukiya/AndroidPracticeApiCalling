<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidPractice"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".task.TaskActivity"
            android:exported="false" />
        <activity
            android:name=".tvshow.TvShowApiActivity"
            android:exported="false" />
        <activity
            android:name=".Post.RetrofitPostActivity"
            android:exported="false" />
        <activity
            android:name=".Https.HttpsActivity"
            android:exported="false" />
        <activity
            android:name=".retrofit.RetrofitActivity"
            android:exported="false" />
        <activity
            android:name=".Gsonobject.GsonObjectActivity"
            android:exported="false" />
        <activity
            android:name=".Gson.GSONActivity"
            android:exported="false" />
        <activity
            android:name=".volly.VolleyActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>